// Test std.time module
import * as time from "std.time";

print("Testing std.time module:");
print("======================");

// Test time.now()
var now = time.now();
print("Current time (seconds since epoch):", now);
assert(now > 0, "time.now() should return a positive number");

// Test time.format()
var formatted = time.format(now);
print("Formatted time:", formatted);

var customFormat = time.format(now, "%Y-%m-%d");
print("Custom formatted time:", customFormat);

// Test time.sleep()
print("Sleeping for 0.1 seconds...");
time.sleep(0.1);
var after = time.now();
print("Time after sleep:", after);
assert(after > now, "Time should advance after sleep");

print("\nAll time tests passed!");
