
import "math";
print("Test 1 - Simple import:");
print("math.pi =", math.pi);
print("math.sqrt(16) =", math.sqrt(16));
print("math.pow(2, 3) =", math.pow(2, 3));
print("");

import { sqrt, sin, cos, pi } from "math";
print("Test 2 - Named imports:");
print("sqrt(25) =", sqrt(25));
print("pi =", pi);
print("sin(pi/2) =", sin(pi/2));
print("");

import * as m from "math";
print("Test 3 - Wildcard import:");
print("m.pi =", m.pi);
print("m.abs(-42) =", m.abs(-42));
print("");

import "string";
print("Test 4 - String module:");
var text = "Hello World";
print("string.toUpper('" + text + "') =", string.toUpper(text));
print("string.split('" + text + "', ' ') =", string.split(text, " "));
print("");

import { map, filter } from "array";
print("Test 5 - Array module:");
var nums = [1, 2, 3, 4, 5];
fn double(x) { return x * 2; }
fn isEven(x) { return x - floor(x / 2) * 2 == 0; }
print("map([1,2,3,4,5], double) =", map(nums, double));
print("filter([1,2,3,4,5], isEven) =", filter(nums, isEven));
print("");

import "io";
print("Test 6 - IO module:");
io.writeFile("/tmp/test_module.txt", "Hello from IziLang!");
print("File exists:", io.exists("/tmp/test_module.txt"));
print("File contents:", io.readFile("/tmp/test_module.txt"));
print("");

print("All module tests passed!");
