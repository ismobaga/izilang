print("=== std.string Tests ===");
print("");

print("Substring:");
var str = "Hello, World!";
print("  Original:", str);
print("  substring(str, 0, 5) =", substring(str, 0, 5));
print("  substring(str, 7, 5) =", substring(str, 7, 5));
print("  substring(str, 7) =", substring(str, 7));
print("");

print("Split:");
var words = split("apple,banana,cherry", ",");
print("  split('apple,banana,cherry', ',') =", words);
var chars = split("hello", "");
print("  split('hello', '') =", chars);
print("");

print("Join:");
var arr = ["a", "b", "c"];
print("  join(['a', 'b', 'c'], '-') =", join(arr, "-"));
var nums = [1, 2, 3];
print("  join([1, 2, 3], ', ') =", join(nums, ", "));
print("");

print("Case conversion:");
print("  toUpper('hello') =", toUpper("hello"));
print("  toLower('WORLD') =", toLower("WORLD"));
print("  toUpper('Hello World') =", toUpper("Hello World"));
print("");

print("Trim:");
print("  trim('  hello  ') = '", trim("  hello  "), "'");
print("");

print("Replace:");
print("  replace('hello world', 'world', 'there') =", replace("hello world", "world", "there"));
print("  replace('aaa', 'a', 'b') =", replace("aaa", "a", "b"));
print("");

print("StartsWith and EndsWith:");
print("  startsWith('hello', 'hel') =", startsWith("hello", "hel"));
print("  startsWith('hello', 'wor') =", startsWith("hello", "wor"));
print("  endsWith('hello', 'llo') =", endsWith("hello", "llo"));
print("  endsWith('hello', 'hel') =", endsWith("hello", "hel"));
print("");

print("IndexOf:");
print("  indexOf('hello world', 'world') =", indexOf("hello world", "world"));
print("  indexOf('hello world', 'x') =", indexOf("hello world", "x"));
print("  indexOf('hello', 'l') =", indexOf("hello", "l"));
print("");

print("=== All std.string tests passed! ===");
