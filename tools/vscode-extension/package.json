{
  "name": "izilang",
  "displayName": "IziLang",
  "description": "Language support for IziLang",
  "version": "0.1.0",
  "publisher": "izilang",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "izilang",
    "izi",
    "programming language"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:izilang"
  ],
  "contributes": {
    "languages": [
      {
        "id": "izilang",
        "aliases": [
          "IziLang",
          "izi"
        ],
        "extensions": [
          ".iz"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "izilang",
        "scopeName": "source.izilang",
        "path": "./syntaxes/izilang.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "IziLang",
      "properties": {
        "izilang.lsp.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable IziLang language server"
        },
        "izilang.lsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
