{
  "name": "izilang",
  "displayName": "IziLang",
  "description": "Language support for IziLang",
  "version": "0.1.0",
  "publisher": "izilang",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "keywords": [
    "izilang",
    "izi",
    "programming language"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:izilang",
    "onDebug"
  ],
  "contributes": {
    "languages": [
      {
        "id": "izilang",
        "aliases": [
          "IziLang",
          "izi"
        ],
        "extensions": [
          ".iz"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "izilang",
        "scopeName": "source.izilang",
        "path": "./syntaxes/izilang.tmLanguage.json"
      }
    ],
    "debuggers": [
      {
        "type": "izilang",
        "label": "IziLang Debug",
        "languages": ["izilang"],
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to the IziLang source file to debug.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": false
              },
              "args": {
                "type": "array",
                "description": "Command line arguments passed to the program.",
                "items": { "type": "string" },
                "default": []
              },
              "debugAdapterPath": {
                "type": "string",
                "description": "Absolute path to the izilang-dap executable (overrides PATH lookup).",
                "default": ""
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "izilang",
            "request": "launch",
            "name": "Debug IziLang File",
            "program": "${file}",
            "stopOnEntry": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "IziLang: Launch",
            "description": "A new configuration for debugging an IziLang program.",
            "body": {
              "type": "izilang",
              "request": "launch",
              "name": "Debug IziLang File",
              "program": "^\"\\${file}\"",
              "stopOnEntry": false
            }
          }
        ]
      }
    ],
    "configuration": {
      "title": "IziLang",
      "properties": {
        "izilang.lsp.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable IziLang language server"
        },
        "izilang.lsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        },
        "izilang.dap.adapterPath": {
          "type": "string",
          "default": "",
          "description": "Path to the izilang-dap executable. Leave empty to use the one from PATH."
        }
      }
    },
    "commands": [
      {
        "command": "izilang.restartServer",
        "title": "Restart Language Server",
        "category": "IziLang"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "@vscode/debugadapter": "^1.64.0",
    "@vscode/debugprotocol": "^1.64.0"
  }
}
