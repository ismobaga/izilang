{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "IziLang",
  "scopeName": "source.izilang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.izilang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.izilang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.izilang",
          "match": "\\b(if|else|while|for|return|break|continue|try|catch|finally|match|throw|async|await)\\b"
        },
        {
          "name": "keyword.other.izilang",
          "match": "\\b(fn|var|class|import|export|extends|from|as|this|super|print|default|macro)\\b"
        },
        {
          "name": "keyword.operator.logical.word.izilang",
          "match": "\\b(and|or)\\b"
        },
        {
          "name": "constant.language.izilang",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "comment": "f-string with interpolation: f\"...${expr}...\"",
          "name": "string.quoted.double.izilang",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            {
              "name": "meta.embedded.line.izilang",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.template-expression.begin.izilang" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.template-expression.end.izilang" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            {
              "name": "constant.character.escape.izilang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.izilang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.izilang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.izilang",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.compound.izilang",
          "match": "\\+=|-=|\\*=|/=|%="
        },
        {
          "name": "keyword.operator.arithmetic.izilang",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.comparison.izilang",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.izilang",
          "match": "&&|\\|\\||!"
        },
        {
          "comment": "Simple assignment: matches a lone '=' while excluding '==', '!=', '<=', '>=' (comparison operators) and '+=', '-=', '*=', '/=', '%=' (compound assignments, matched above).",
          "name": "keyword.operator.assignment.izilang",
          "match": "(?<![=!<>+\\-*/%])=(?!=)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.izilang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.izilang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
