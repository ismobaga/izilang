// Test std.assert module

import * as assert from "std.assert";

print("Testing assert.ok...");

// Test ok with truthy values
assert.ok(true);
assert.ok(1);
assert.ok("hello");
assert.ok([1, 2, 3]);

print("  ✓ assert.ok with truthy values passed");

// Test ok with custom message
assert.ok(5 > 3, "5 should be greater than 3");
print("  ✓ assert.ok with custom message passed");

print("");
print("Testing assert.eq...");

// Test eq with equal values
assert.eq(1, 1);
assert.eq("hello", "hello");
assert.eq(true, true);

print("  ✓ assert.eq with equal values passed");

print("");
print("Testing assert.ne...");

// Test ne with different values
assert.ne(1, 2);
assert.ne("hello", "world");
assert.ne(true, false);

print("  ✓ assert.ne with different values passed");

print("");
print("Testing failure cases...");

// Test that assert.ok fails with false
try {
    assert.ok(false);
    print("  ✗ assert.ok should have failed!");
} catch (e) {
    print("  ✓ assert.ok correctly failed for false");
}

// Test that assert.ok fails with custom message
try {
    assert.ok(false, "This is a custom error message");
    print("  ✗ assert.ok should have failed!");
} catch (e) {
    print("  ✓ assert.ok correctly failed with custom message");
}

// Test that assert.eq fails with different values
try {
    assert.eq(1, 2);
    print("  ✗ assert.eq should have failed!");
} catch (e) {
    print("  ✓ assert.eq correctly failed for different values");
}

// Test that assert.ne fails with equal values
try {
    assert.ne(5, 5);
    print("  ✗ assert.ne should have failed!");
} catch (e) {
    print("  ✓ assert.ne correctly failed for equal values");
}

print("");
print("All tests passed! ✓");
